<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout_recomm_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_recomm"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fresco_recomm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:placeholderImage="@drawable/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_recomm_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/player_play_n"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_recomm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sea"
                android:textColor="#fff"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_recomm_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_recomm_name"
                android:layout_marginTop="5dp"
                android:text="乐轩"
                android:textColor="#fff"
                android:textSize="16sp"/>
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_recomm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_recomm"
        android:layout_marginTop="15dp"
        android:text="我是内容"/>

    <TextView
        android:id="@+id/tv_recomm_kuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recomm_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_bac"
        android:text="古典"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/iv_recomm_share"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/tv_recomm_kuang"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:src="@drawable/bar_share_off"/>

    <TextView
        android:id="@+id/tv_recomm_comm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_recomm_share"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/iv_recomm_share"
        android:text="0"/>

    <ImageView
        android:id="@+id/iv_recomm_comm"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/tv_recomm_comm"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/tv_recomm_comm"
        android:src="@drawable/bar_comm_off"/>

    <TextView
        android:id="@+id/tv_recomm_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_recomm_comm"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/iv_recomm_comm"
        android:text="3"/>

    <ImageView
        android:id="@+id/iv_recomm_fav"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/tv_recomm_fav"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/tv_recomm_fav"
        android:src="@drawable/vol_fav_off_n"/>


</RelativeLayout>