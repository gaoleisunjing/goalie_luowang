<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layou_fourthitem_container"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/fresco_fourthitem"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        fresco:placeholderImage="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/tv_fourthitem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fresco_fourthitem"
        android:layout_toRightOf="@id/fresco_fourthitem"
        android:text="赵雷：生活是我存储灵感的粮仓"
        android:textColor="#000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_fourthitem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLines="2"
        android:layout_toRightOf="@id/fresco_fourthitem"
        android:layout_alignBottom="@id/fresco_fourthitem"
        android:text="每个人都有属于自己的表达方式，我的渠道是：歌曲。所以我的歌是内心所想。"/>
</RelativeLayout>