<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_itemwhite"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:orientation="horizontal">

    <com.app.widget.MyRedLine
        android:id="@+id/view_divider"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tv_discover_divider_name"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view_divider"
        android:text="音乐期刊"
        android:textColor="#000"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_divider_more11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/thank_user_more"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_divider_more11"
        android:text="全部"
        android:textColor="#B9B9B9"
        android:textSize="16sp"/>
</RelativeLayout>