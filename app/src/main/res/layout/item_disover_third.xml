<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

    <FrameLayout
        android:id="@+id/layout_thirditem_play"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:clickable="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fresco_thirditem"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            fresco:placeholderImage="@drawable/ic_launcher"/>
        <View
            android:background="#44000000"
            android:layout_width="match_parent"
            android:layout_height="230dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:src="@drawable/video_ico"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_thirditem_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Bad Blood"
                android:textColor="#fff"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_thirditem_content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Elenore"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/tv_thirditem_bottom"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="#MV频道  4:08"
                android:textColor="#fff"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>